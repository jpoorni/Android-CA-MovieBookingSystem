<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="360dp"
                android:id="@+id/imageView_tirow"
                android:layout_column="0" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_column="1">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textView1_tirow"
                    android:textSize="36dp" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView2_tirow"
                    android:textSize="26dp"
                    android:textColor="#2E2E2E" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView3_tirow"
                    android:textSize="26dp"
                    android:textColor="#2E2E2E" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView4_tirow"
                    android:textSize="26dp"
                    android:textColor="#2E2E2E" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView5_tirow"
                    android:textSize="22dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="200dp"
            android:layout_height="200dp">

            <TextView
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView6_tirow"
                android:layout_column="0"
                android:textIsSelectable="false"
                android:textSize="32dp"
                android:textAlignment="center" />

            <Spinner
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_column="1"
                android:entries="@array/person"
                android:textSize="32dp"
                android:layout_gravity="center_horizontal"
                 />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:id="@+id/listView_time"
                android:layout_column="0"
                android:entries="@array/ListItem"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MAP"
                    android:id="@+id/button1_tirow"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/text_view_border"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PATH"
                    android:id="@+id/button2_tirow"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/text_view_border"/>
            </LinearLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>